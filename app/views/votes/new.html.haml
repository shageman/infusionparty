= form_for @vote do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2
        = pluralize(@vote.errors.count, "error")
        prohibited this vote from being saved:
      %ul
        - @vote.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :drink1
    %br/
    = f.text_field :drink1
  .field
    = f.label :drink2
    %br/
    = f.text_field :drink2
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .field
    = f.label :answer
    %br/
    = f.number_field :answer
  .actions
    = f.submit